
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- start page baner section  -->
<section class="page-baner">
    <div class="container">
        <div class="page-baner-content text-center">
            <h5>Contact Us</h5>
            <div class="baner-link">
                <span><a href="~/Home">Home / </a></span>
                <span><a href="">Contact Us</a></span>
            </div>
        </div>
    </div>
</section>
<!-- end page baner section  -->
<div id="alert"></div>
<div>
    @Html.Action("ContactUs")
</div>
<div id="contact-form">
    @Html.Action("ContactMessage")
</div>

<div>
    @Html.Action("Map")
</div>
<script>

    function OnSuccess(data) {

        if (data.done) {
            var message = '<p class="alert alert-success">Message sent successfully</p>';
            $('#alert').html(message);
            Add();
        } else {
            alert("Error in sending Message");
        }
    }
    function Add() {
        $.ajax({
            url: "/Contact/ContactMessage",
            method: "GET"
        }).done(function (data) {
            $('#contact-form').html(data);
        }).fail(function (data) {
        });
    }
    function OnFailure(data) {

    }
</script>