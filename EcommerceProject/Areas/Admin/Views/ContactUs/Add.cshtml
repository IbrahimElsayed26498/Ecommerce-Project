@model EcommerceProject.VM.ContactUsVM

@{
    string formName = ViewBag.FormName;
}
<div>
    @using (Ajax.BeginForm(formName ,
        new AjaxOptions { OnSuccess = "onSuccess", OnFailure = "onFailure" }))
    {
        @Html.LabelFor(z => z.address, new { @class = "form-label" })
        @Html.TextBoxFor(z => z.address, new { @class = "form-control" })
        @Html.ValidationMessageFor(z => z.address)

        @Html.LabelFor(z => z.Email, new { @class = "form-label" })
        @Html.TextBoxFor(z => z.Email, new
                    {
                        @class = "form-control",
                        type = "email"
                    })
        @Html.ValidationMessageFor(z => z.Email)

        @Html.LabelFor(z => z.phone, new { @class = "form-label" })
        @Html.TextBoxFor(z => z.phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(z => z.phone)

        @Html.LabelFor(z => z.facebook, new { @class = "form-label" })
        @Html.TextBoxFor(z => z.facebook, new { @class = "form-control" })
        @Html.ValidationMessageFor(z => z.facebook)

        if (formName == "PostEdit")
        {
            @Html.HiddenFor(z => z.CreatedBy)
            @Html.HiddenFor(z => z.CreationDate)
            @Html.HiddenFor(z => z.ID)
            <button type="submit" class="btn btn-success">Edit</button>
        }
        else if (formName == "PostAdd")
        {
            <button type="submit" class="btn btn-success">Save</button>
            <button type="reset" class="btn btn-danger">Clear</button>
        }
    }
</div>
