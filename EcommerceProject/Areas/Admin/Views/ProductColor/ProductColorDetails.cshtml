@model List<EcommerceProject.Models.ProductColor>
<div class="container">
    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Color</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Color.Name</td>
                        <td>
                            <button onclick="edit(@item.ID)" class="btn btn-primary">Edit</button>
                            <button onclick="Delete(@item.ID)" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-danger">No data found</p>
    }
</div>
<script>
    function edit(id) {
        $.ajax({
            url: "/admin/productColor/edit",
            type: "Get",
            data: {
                id : id
            }
        }).done(function (data) {
            $('#form').html(data)
        }).fail(function (data) {
        });
    }

    function Delete (id){
        $.ajax({
            url: "/admin/productColor/delete",
            type: "Get",
            data: {
                id : id
            }
        }).done(function (data) {
            var message;
            if (data.done) {
                message = '<p class="alert alert-success">' + data.message + '</p>';
                Table();
            }else {
                message = '<p class="alert alert-danger">' + data.message + '</p>';
            }
            $('#alert').html(message)
            
        }).fail(function (data) {
        });
    }
</script>


